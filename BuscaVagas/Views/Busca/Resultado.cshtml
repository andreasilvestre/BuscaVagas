                @Html.DisplayFor(modelItem => item.Empresa.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empresa.Representante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empresa.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empresa.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nivel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tecnologia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
